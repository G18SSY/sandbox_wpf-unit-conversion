<UserControl x:Class="WpfApp2.UnitBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="ControlElement"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel DataContext="{Binding ElementName=ControlElement}"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="5">
        <TextBox Text="{Binding TargetValue, TargetNullValue=''}" 
                 VerticalAlignment="Stretch"
                 MinWidth="60"/>
        <ComboBox ItemsSource="{Binding AvailableUnits}"
                  VerticalAlignment="Stretch"
                  MinWidth="40"
                  IsEditable="False"
                  DisplayMemberPath="Abbreviation"
                  SelectedValuePath="Unit"
                  SelectedValue="{Binding TargetUnit, Mode=TwoWay}"/>
    </StackPanel>
</UserControl>
